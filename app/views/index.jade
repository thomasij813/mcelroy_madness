doctype html
head
  title Landing Page
  link(rel='stylesheet', href='/stylesheets/normalize.css', type='text/css')
  link(rel='stylesheet', href='/stylesheets/style.css', type='text/css')
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
body
  ul.navigation
    li.brand
      a(href="#") McElroy Madness
    li.blank  
    li
      a(href="#") Programs  
    li
      a(href="#") About
  ul.program_list
    each program in locals.data
      li.episode
        -if (program.feed_type === 'audio/podcast')
          .img_container
            img(src="#{program.image_url}")
            .img_overlay
              i.fa.fa-play.audio_icon
          .program_content
            .program_title #{program.title}
            .program_date #{program.disp_date}
        -else
          iframe(src="#{program.video_link}" frameborder="0" allowfullscreen)
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js")        
  script(type="text/javascript" src="/scripts/script.js")
